# Azure OpenAI Configuration
# ============================

# REQUIRED: Azure OpenAI Resource Settings
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01

# REQUIRED: LLM Model Configuration
# This is the primary LLM model used across all libraries
AZURE_OPENAI_LLM_DEPLOYMENT_NAME=your-llm-deployment-name
# Model name (e.g., gpt-4, gpt-35-turbo, gpt-4-turbo)
AZURE_OPENAI_LLM_MODEL_NAME=gpt-4

# REQUIRED: Embedding Model Configuration
# This is the embedding model used for vector operations
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment-name
# Model name (e.g., text-embedding-ada-002, text-embedding-3-small, text-embedding-3-large)
AZURE_OPENAI_EMBEDDING_MODEL_NAME=text-embedding-ada-002

# OPTIONAL: Azure Active Directory Authentication
# Use this instead of API key for enhanced security
AZURE_USE_AD_AUTH=false
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# LLM Parameters
# ==============
TEMPERATURE=0.7
MAX_TOKENS=2000
TOP_P=0.95
FREQUENCY_PENALTY=0
PRESENCE_PENALTY=0
STREAMING_ENABLED=false

# API Configuration
# =================
MAX_RETRIES=3
TIMEOUT_SECONDS=60
# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# Embedding Parameters
# ====================
EMBEDDING_BATCH_SIZE=16
EMBEDDING_CHUNK_SIZE=512
EMBEDDING_CHUNK_OVERLAP=50

# Logging Configuration
# =====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=detailed
# Options: detailed, simple, json
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Feature Flags
# =============
ENABLE_CACHE=false
CACHE_TTL_SECONDS=3600
ENABLE_TELEMETRY=false
DEBUG_MODE=false

# ==============================================================================
# BACKWARD COMPATIBILITY (for existing code using old config)
# These map to the new settings above - you can ignore these if using new config
# ==============================================================================
AZURE_OPENAI_DEPLOYMENT_NAME=${AZURE_OPENAI_LLM_DEPLOYMENT_NAME}
AZURE_OPENAI_GPT4_DEPLOYMENT=${AZURE_OPENAI_LLM_DEPLOYMENT_NAME}
AZURE_OPENAI_GPT35_DEPLOYMENT=${AZURE_OPENAI_LLM_DEPLOYMENT_NAME}
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=${AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME}
