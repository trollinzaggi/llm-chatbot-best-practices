# Memory System Environment Configuration Template
# Copy this file to .env and customize as needed

# Session Memory Configuration
MEMORY_MAX_MESSAGES=50
MEMORY_MAX_TOKENS=8000
MEMORY_SUMMARIZE_AFTER=20
MEMORY_COMPRESSION_RATIO=0.3

# Persistent Memory Configuration
MEMORY_ENABLED=true
MEMORY_DATABASE_URL=memory.db
# For PostgreSQL: MEMORY_DATABASE_URL=postgresql://user:pass@localhost:5432/memory_db
# For MongoDB: MEMORY_DATABASE_URL=mongodb://localhost:27017/memory_db
MEMORY_IMPORTANCE_THRESHOLD=0.3
MEMORY_MAX_MEMORIES_PER_USER=10000
MEMORY_CONSOLIDATION_THRESHOLD=0.8
MEMORY_DEFAULT_EXPIRY_DAYS=90

# Retrieval Configuration
MEMORY_SEMANTIC_SEARCH=true
MEMORY_TOP_K=5
MEMORY_SIMILARITY_THRESHOLD=0.7
MEMORY_USE_EMBEDDINGS=true
MEMORY_EMBEDDING_CACHE_SIZE=1000

# Processing Configuration
MEMORY_EXTRACT_ENTITIES=true
MEMORY_EXTRACT_FACTS=true
MEMORY_EXTRACT_PREFERENCES=true
MEMORY_PROCESSING_IMPORTANCE_THRESHOLD=0.5
MEMORY_AUTO_SUMMARIZE=true
MEMORY_AUTO_CONSOLIDATE=true

# Framework-specific Configuration
MEMORY_LANGCHAIN_TYPE=conversation_summary_buffer
MEMORY_LANGCHAIN_KEY=history
MEMORY_LANGCHAIN_RETURN_MESSAGES=true

MEMORY_LANGGRAPH_ENABLE_NODES=true
MEMORY_LANGGRAPH_TRACK_HISTORY=true
MEMORY_LANGGRAPH_MAX_CYCLES=3

MEMORY_CREWAI_SHARE_MEMORIES=true
MEMORY_CREWAI_BROADCAST=true
MEMORY_CREWAI_TRACK_EXPERTISE=true

MEMORY_AUTOGEN_LEARN_PATTERNS=true
MEMORY_AUTOGEN_TRACK_CODE=true
MEMORY_AUTOGEN_BUILD_SKILLS=true

MEMORY_LLAMA_INDEX_TYPE=vector_store
MEMORY_LLAMA_HIERARCHICAL=true
MEMORY_LLAMA_CONSOLIDATION=true

MEMORY_AGNO_TRACK_TOOLS=true
MEMORY_AGNO_EXTRACT_CONTEXT=true

# Global Settings
MEMORY_DEBUG=false
MEMORY_TELEMETRY=false
MEMORY_AUTO_SAVE_INTERVAL=10
MEMORY_SYNC_ENABLED=true

# Optional: API Keys for Enhanced Features
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# COHERE_API_KEY=your-cohere-api-key
# HUGGINGFACE_API_KEY=your-huggingface-api-key

# Optional: Vector Database Configuration
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment
# WEAVIATE_URL=http://localhost:8080
# QDRANT_URL=http://localhost:6333
# CHROMA_HOST=localhost
